      "titulo": "The pronouns",
      "contenido": [
        {
          "clase": "texto",
          "texto": "Los pronombres en inglés son los siguientes:"
        },
        {
          "clase": "tabla",
          "filaTitulos": [
            {
              "titulo": ""
            },
